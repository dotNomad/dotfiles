{
  "[git-commit]": {
    "editor.rulers": [72, 50],
    "editor.wordWrap": "off"
  },
  "[json][javascript][typescript]": {
    "editor.tabSize": 2
  },
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.fontFamily": "Hack, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "editor.stickyScroll.enabled": true,
  "files.insertFinalNewline": true,
  "git.confirmSync": false,
  "git.inputValidation": true,
  "git.inputValidationLength": 50,
  "terminal.integrated.env.osx": {
    "GIT_EDITOR": "code --wait"
  },
  "terminal.integrated.fontFamily": "'Hack Nerd Font Mono', Menlo",
  "terminal.integrated.fontSize": 14,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<esc>"]
    }
  ],
  "workbench.colorCustomizations": {
    "terminal.background": "#2c2525"
  },
  "workbench.colorTheme": "Monokai Pro (Filter Ristretto)",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons"
}
